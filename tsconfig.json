{
  "compileOnSave":              false,
  "exclude": [
    "node_modules",
    "wwwroot",
    "Scripts/app"
  ],
  "compilerOptions": {
    "outDir":                   "./dist/out-tsc",
    "sourceMap":                true,
    "declaration":              false,
    "moduleResolution":         "node",
    "emitDecoratorMetadata":    true,
    "experimentalDecorators":   true,
    "target":                   "es5",
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2017",
      "dom"
    ],
    "baseUrl":                  "src",
    "paths": {
      "@r-app/*":               ["app/*"],
      "@r-about/*":             ["app/about/*"],
      "@r-contact/*":           ["app/contact/*"],
      "@r-project/*":           ["app/project/*"],
      "@r-material/*":          ["app/material/*"],
      "@r-environment/*":       ["environments/*"]
    }
  }
}